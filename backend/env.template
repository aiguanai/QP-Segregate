# Cloud Database Configuration (No AWS S3)
# Copy this to .env and replace with your actual URLs

# PostgreSQL - Choose ONE of these:
# Option 1: Supabase (Recommended - Free tier)
CLOUD_DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# Option 2: Google Cloud SQL
# CLOUD_DATABASE_URL=postgresql://username:password@your-instance-ip:5432/qpaper_ai

# Option 3: Neon (Serverless PostgreSQL)
# CLOUD_DATABASE_URL=postgresql://username:password@your-neon-endpoint.neon.tech:5432/qpaper_ai

# MongoDB - Choose ONE of these:
# Option 1: MongoDB Atlas (Recommended - Free tier)
CLOUD_MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/qpaper_ai?retryWrites=true&w=majority

# Option 2: AWS DocumentDB
# CLOUD_MONGODB_URL=mongodb://username:password@your-documentdb-endpoint:27017/qpaper_ai?ssl=true&replicaSet=rs0

# Redis - Choose ONE of these:
# Option 1: Redis Cloud (Free tier)
CLOUD_REDIS_URL=redis://username:password@your-redis-cloud-endpoint:port

# Option 2: Google Cloud Memorystore
# CLOUD_REDIS_URL=redis://your-memorystore-ip:6379

# Local Storage (No AWS S3)
UPLOAD_DIR=storage/papers
TEMP_UPLOAD_DIR=tmp/uploads
PAGE_IMAGES_DIR=storage/page_images

# Security
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs (Optional - for advanced features)
PINECONE_API_KEY=your-pinecone-api-key
MATHPIX_API_KEY=your-mathpix-api-key

# Processing Configuration
OCR_CONFIDENCE_THRESHOLD=0.4
CLASSIFICATION_CONFIDENCE_THRESHOLD=0.7
SIMILARITY_THRESHOLD=0.85
TEMP_UPLOAD_EXPIRE_HOURS=24

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
