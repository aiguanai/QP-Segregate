# Cloud Database Configuration (Without AWS S3)
# Replace these with your actual cloud database URLs

# PostgreSQL (Choose one)
# Supabase (Recommended - Free tier available)
CLOUD_DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# Google Cloud SQL
# CLOUD_DATABASE_URL=postgresql://username:password@your-instance-ip:5432/qpaper_ai

# Neon (Serverless PostgreSQL)
# CLOUD_DATABASE_URL=postgresql://username:password@your-neon-endpoint.neon.tech:5432/qpaper_ai

# MongoDB (Choose one)
# MongoDB Atlas (Recommended - Free tier available)
CLOUD_MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/qpaper_ai?retryWrites=true&w=majority

# Redis (Choose one)
# Redis Cloud (Free tier available)
CLOUD_REDIS_URL=redis://username:password@your-redis-cloud-endpoint:port

# Google Cloud Memorystore
# CLOUD_REDIS_URL=redis://your-memorystore-ip:6379

# Local Storage (No AWS S3)
# Files will be stored locally on your server
UPLOAD_DIR=storage/papers
TEMP_UPLOAD_DIR=tmp/uploads
PAGE_IMAGES_DIR=storage/page_images

# Security
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs (Optional)
PINECONE_API_KEY=your-pinecone-api-key
MATHPIX_API_KEY=your-mathpix-api-key

# Processing Configuration
OCR_CONFIDENCE_THRESHOLD=0.4
CLASSIFICATION_CONFIDENCE_THRESHOLD=0.7
SIMILARITY_THRESHOLD=0.85
TEMP_UPLOAD_EXPIRE_HOURS=24

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Optional: Alternative Cloud Storage (if you want cloud storage later)
# Google Cloud Storage
# GOOGLE_CLOUD_PROJECT=your-gcp-project-id
# GOOGLE_CLOUD_BUCKET=your-gcs-bucket-name

# Supabase Storage
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-supabase-anon-key
# SUPABASE_SERVICE_KEY=your-supabase-service-key

# DigitalOcean Spaces (S3-compatible)
# DO_SPACES_KEY=your-spaces-key
# DO_SPACES_SECRET=your-spaces-secret
# DO_SPACES_ENDPOINT=https://your-region.digitaloceanspaces.com
# DO_SPACES_BUCKET=your-bucket-name
