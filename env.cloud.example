# Cloud Database Configuration
# Replace these with your actual cloud database URLs

# PostgreSQL (Choose one)
# AWS RDS
CLOUD_DATABASE_URL=postgresql://username:password@your-rds-endpoint.amazonaws.com:5432/qpaper_ai

# Supabase
# CLOUD_DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# Google Cloud SQL
# CLOUD_DATABASE_URL=postgresql://username:password@your-instance-ip:5432/qpaper_ai

# Neon
# CLOUD_DATABASE_URL=postgresql://username:password@your-neon-endpoint.neon.tech:5432/qpaper_ai

# MongoDB (Choose one)
# MongoDB Atlas
CLOUD_MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/qpaper_ai?retryWrites=true&w=majority

# AWS DocumentDB
# CLOUD_MONGODB_URL=mongodb://username:password@your-documentdb-endpoint:27017/qpaper_ai?ssl=true&replicaSet=rs0

# Redis (Choose one)
# AWS ElastiCache
CLOUD_REDIS_URL=redis://your-elasticache-endpoint.cache.amazonaws.com:6379

# Redis Cloud
# CLOUD_REDIS_URL=redis://username:password@your-redis-cloud-endpoint:port

# Google Cloud Memorystore
# CLOUD_REDIS_URL=redis://your-memorystore-ip:6379

# Cloud Storage Configuration
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name

# Google Cloud Storage (Alternative to S3)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_BUCKET=your-gcs-bucket-name

# Security
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs
PINECONE_API_KEY=your-pinecone-api-key
MATHPIX_API_KEY=your-mathpix-api-key

# File Storage Paths (Cloud-based)
UPLOAD_DIR=s3://your-s3-bucket/papers
TEMP_UPLOAD_DIR=s3://your-s3-bucket/temp
PAGE_IMAGES_DIR=s3://your-s3-bucket/page_images

# Processing Configuration
OCR_CONFIDENCE_THRESHOLD=0.4
CLASSIFICATION_CONFIDENCE_THRESHOLD=0.7
SIMILARITY_THRESHOLD=0.85
TEMP_UPLOAD_EXPIRE_HOURS=24

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Optional: Database SSL Configuration
# DB_SSL_MODE=require
# DB_SSL_CERT_PATH=/path/to/cert.pem
# DB_SSL_KEY_PATH=/path/to/key.pem
# DB_SSL_CA_PATH=/path/to/ca.pem
